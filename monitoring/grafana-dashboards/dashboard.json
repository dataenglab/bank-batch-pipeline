{
  "dashboard": {
    "id": null,
    "uid": "data-pipeline-monitoring",
    "title": "Data Pipeline Monitoring",
    "tags": ["data-pipeline", "monitoring"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Records Processed Rate",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(pipeline_records_processed_total[5m])",
            "legendFormat": "{{status}} - {{source}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 0
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "recsec"
          }
        }
      },
      {
        "id": 2,
        "title": "Processing Duration by Operation",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(pipeline_processing_duration_seconds_sum[5m]) / rate(pipeline_processing_duration_seconds_count[5m])",
            "legendFormat": "{{operation}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 0
        },
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {
              "mode": "palette-classic"
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Queue Sizes",
        "type": "graph",
        "targets": [
          {
            "expr": "pipeline_queue_size{queue_name='input'}",
            "legendFormat": "Input Queue",
            "refId": "A"
          },
          {
            "expr": "pipeline_queue_size{queue_name='processing'}",
            "legendFormat": "Processing Queue",
            "refId": "B"
          },
          {
            "expr": "pipeline_queue_size{queue_name='output'}",
            "legendFormat": "Output Queue",
            "refId": "C"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "color": {
              "mode": "palette-classic"
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Active Processes & Throughput",
        "type": "graph",
        "targets": [
          {
            "expr": "pipeline_active_processes",
            "legendFormat": "Active Processes",
            "refId": "A"
          },
          {
            "expr": "pipeline_throughput_records_per_second",
            "legendFormat": "Throughput (rec/sec)",
            "refId": "B"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          }
        }
      },
      {
        "id": 5,
        "title": "Error Types",
        "type": "stat",
        "targets": [
          {
            "expr": "rate(pipeline_errors_total[5m])",
            "legendFormat": "{{error_type}}",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        },
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            },
            "unit": "short"
          }
        }
      },
      {
        "id": 6,
        "title": "Memory Usage",
        "type": "gauge",
        "targets": [
          {
            "expr": "pipeline_memory_usage_bytes / (1024*1024)",
            "legendFormat": "Memory (MB)",
            "refId": "A"
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        },
        "fieldConfig": {
          "defaults": {
            "unit": "bytes",
            "min": 0,
            "max": 200,
            "color": {
              "mode": "thresholds"
            }
          }
        }
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "refresh": "10s",
    "version": 1
  }
}